{
    "manifest_version": 3,
    "author": "MrMati",
    "name": "Mixy Volume Control",
    "version": "1.1.1",
    "description": "Control volume of your tabs with Mixy",
    "homepage_url": "https://github.com/MixyLabs/VolumeControl",

    "icons": {
        "16": "assets/icons/blue/16.png",
        "32": "assets/icons/blue/32.png",
        "64": "assets/icons/blue/64.png",
        "128": "assets/icons/blue/128.png"
    },

    "permissions": [
        "storage",
        "tabCapture",
        "nativeMessaging",
        "tabs",
        "scripting",
        "offscreen"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "action": {
        "default_title": "Mixy Volume Control",
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },

    "web_accessible_resources": [
        {
            "resources": ["assets/*", "assets/icons/*"],
            "matches": ["<all_urls>"]
        }
    ],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://cdnjs.cloudflare.com"
    }
}